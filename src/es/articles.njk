---
locale: "es"
dir: "ltr"
---

{% extends "layouts/base.njk" %}
{% block title %}Felipe Moyano | Artículos{% endblock %}
{% block content %}
  <section class="w-full max-w-3xl mx-auto">
    <div class="px-4 mt-6 py-12">
      <h1 class="text-4xl font-bold text-gray-900 font-display">
        Artículos
      </h1>

      <div class="mt-12 space-y-6">
        {%- for post in collections.spanishPosts | reverse -%}
        <a href="{% if post.data.external_url %}{{ post.data.external_url }}{% else %}{{ post.url | url }}{% endif %}"
           class="group block font-normal"
           {% if post.data.external_url %}target="_blank" rel="noopener noreferrer"{% endif %}>
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-6 items-start p-4 -mx-4 rounded-2xl transition-all duration-300 hover:bg-white hover:shadow-lg hover:shadow-gray-200/50">
            <div class="sm:w-28 shrink-0 flex flex-col gap-3">
              {% if post.data.featured_image %}
                <div class="overflow-hidden rounded-lg aspect-video w-full">
                  <img src="{{ post.data.featured_image }}"
                       alt="{{ post.data.featured_image_alt }}"
                       class="w-full h-full object-cover"
                       loading="lazy">
                </div>
              {% endif %}
              <time class="text-sm font-mono text-gray-500 group-hover:text-gray-800 transition-colors">
                {{ post.data.date | readableDate }}
              </time>
            </div>

            <div class="flex-1 gap-2 flex flex-col">
              {% if post.data.external_url %}
              <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium font-sans text-lime-800 bg-lime-100 rounded-full w-fit">
                {{ "external_post.published_on" | i18n }} {{ post.data.external_site }}
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </span>
              {% endif %}
              <h3 class="font-body text-xl font-bold text-gray-800 group-hover:text-lime-700 transition-colors mb-2" style="text-box-trim: trim-both; text-box-edge: cap alphabetic;">
                {{ post.data.title }}
              </h3>

              {% if post.data.description %}
              <p class="font-sans text-gray-600 leading-relaxed line-clamp-2 font-sans">
                {{ post.data.description }}
              </p>
              {% endif %}
            </div>
          </div>
        </a>
        {%- endfor -%}
      </div>
    </div>
  </section>
{% endblock %}
